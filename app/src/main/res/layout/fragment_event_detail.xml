<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/eventImageDetail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/eventTitleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@id/eventImageDetail"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/eventTimeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/eventTitleDetail"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/eventLocationDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/eventTimeDetail"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@id/eventLocationDetail"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/partici"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@id/eventDescription"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/participateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participate"
            android:layout_below="@id/partici"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
